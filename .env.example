# Legato Platform Environment Variables
# Copy this file to .env and update values for your environment

# Database Configuration
POSTGRES_USER=legato_user
POSTGRES_PASSWORD=legato_pass
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# MongoDB Configuration
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_USER=legato_user
MONGO_PASSWORD=legato_pass

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Service URLs (for development)
AUTH_SERVICE_URL=http://auth-service:8001
USER_SERVICE_URL=http://user-service:8002
CONTENT_SERVICE_URL=http://content-service:8003
IP_SERVICE_URL=http://ip-service:8004
PAYMENT_SERVICE_URL=http://payment-service:8005
AI_SERVICE_URL=http://ai-service:8006
ANALYTICS_SERVICE_URL=http://analytics-service:8007

# External API Keys (to be configured)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key
OPENAI_API_KEY=your_openai_api_key

# File Storage Configuration
FILE_STORAGE_PATH=/app/storage
MAX_FILE_SIZE_MB=50

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json